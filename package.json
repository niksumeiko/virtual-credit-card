{
  "name": "virtual-credit-card",
  "description": "A Fintech kata to learn TDD with React",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Nik Sumeiko",
    "url": "https://withnik.com"
  },
  "type": "module",
  "scripts": {
    "start": "npx vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "cypress open --component --browser electron",
    "test:e2e": "cypress open --e2e --browser electron",
    "test:e2e:focus": "cypress open --e2e --browser electron --env TAGS=@focus"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^3.3.4",
    "@tailwindcss/forms": "^0.5.7",
    "@tanstack/react-query": "^5.20.1",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "classnames": "^2.5.1",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-router-dom": "^6.22.0",
    "visa-client": "file:packages/visa-client",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@types/cypress-cucumber-preprocessor": "^4.0.5",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/ui": "^1.2.2",
    "cypress": "^13.6.4",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "dotenv": "^16.4.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-module-utils": "^2.8.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-internal": "file:packages/eslint-plugin-internal",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss-import": "^16.0.1",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tsify": "^5.0.4",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vitest": "^1.2.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/tests/"
  }
}
